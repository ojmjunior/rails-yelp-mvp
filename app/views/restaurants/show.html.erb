<div class="container">

<% if flash.notice %>
  <div class="row">
    <div class="col-12">
      <div class="alert alert-success">
        <%= flash.notice %>
      </div>
    </div>
  </div>
<% end %>
  <h1><%= @restaurant.name.capitalize %></h1>
  <address>Address: <%= @restaurant.address.capitalize %></address>
  <p>Category: <%= @restaurant.category.capitalize %></p>

  <ul class="list-unstyled">Reviews: 
    <%= "No reviews yet" if @restaurant.reviews.empty? %>
    <% @restaurant.reviews.each do |review| %>
      <li><%= review.rating %> star(s) - <%= review.content %></li>
    <% end %>
  </ul>

  <h2>Give us your feedback</h2>
  <%= simple_form_for [@restaurant, @review] do |f| %>
    <%= f.input :content %>
    <%= f.input :rating, collection: 1..5 %>
    <div class="d-flex justify-content-between">
      <%= f.submit "Save review", class: "btn btn-primary"%>
      <%= link_to '+ Back to restaurants list', restaurants_path, class: "btn btn-outline-primary" %>
    </div>
  <% end %>

</div>